@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" onclick="location.href='@Url.Action("Index","Home")'">MMS Dashboard</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" onclick="location.href='@Url.Action("Index","Home")'">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Citizen">Citizen Registration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff">Staff Administration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ServiceRequest">Service Requests</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/Reports">Reports</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <!-- Welcome Section -->
        <div class="row">
            <div class="col-12">
                <h1>Welcome to the Municipality Management System</h1>
                <p class="lead">Your one-stop solution for managing citizens, service requests, and staff.</p>
            </div>
        </div>

        <!-- Statistics Overview -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Active Service Requests</div>
                    <div class="card-body">
                        <h5 class="card-title">120</h5>
                        <p class="card-text">Ongoing service requests</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Registered Citizens</div>
                    <div class="card-body">
                        <h5 class="card-title">5000</h5>
                        <p class="card-text">Total citizens registered</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">Staff Members</div>
                    <div class="card-body">
                        <h5 class="card-title">80</h5>
                        <p class="card-text">Active staff members</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Access Links -->
        <div class="row mt-4">
            <div class="col-md-4">
                <a href="/Citizen/Create" class="btn btn-primary btn-lg w-100">Add New Citizen</a>
            </div>
            <div class="col-md-4">
                <a href="/ServiceRequest/Create" class="btn btn-success btn-lg w-100">Create Service Request</a>
            </div>
            <div class="col-md-4">
                <a href="/Reports" class="btn btn-warning btn-lg w-100">View Pending Reports</a>
            </div>
        </div>

        <!-- News/Updates Section -->
        <div class="row mt-5">
            <div class="col-12">
                <h3>Latest News & Updates</h3>
                <ul class="list-group">
                    <li class="list-group-item">New policy for staff management introduced. <a href="#">Read more...</a></li>
                    <li class="list-group-item">Citizen registration is now open for the new year. <a href="#">Learn more...</a></li>
                    <li class="list-group-item">Important updates on service request handling. <a href="#">Read more...</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container text-center">
            <p>&copy; 2025 Municipality Management System | 
                <a href="#" class="text-white">Privacy Policy</a> | 
                <a href="#" class="text-white">Terms of Service</a></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
