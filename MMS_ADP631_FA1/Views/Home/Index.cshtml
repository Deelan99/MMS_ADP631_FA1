@model Tuple<List<MMS_ADP631_FA1.Models.ServiceRequest>, List<MMS_ADP631_FA1.Models.Citizen>, List<MMS_ADP631_FA1.Models.Staff>>

@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" onclick="location.href='@Url.Action("Index","Home")'">MMS Dashboard</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" onclick="location.href='@Url.Action("Index","Home")'">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Citizen">Citizen Registration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff">Staff Administration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ServiceRequest">Service Requests</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Reports">Reports</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5 flex-grow-1">
        <!-- Welcome Section -->
        <div class="row">
            <div class="col-12">
                <h1>Welcome to the Municipality Management System</h1>
                <p class="lead">Your one-stop solution for managing citizens, service requests, and staff.</p>
            </div>
        </div>

        <!-- Statistics Overview -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Active Service Requests</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <!-- Logic to count number of Service Requests in System -->
                            @{
                                var activeRequestsCount = Model.Item1.Count(request => request.Status == "In Progress");
                            }
                            @activeRequestsCount

                        </h5>
                        <p class="card-text">Ongoing service requests</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Registered Citizens</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <!-- Logic to count number of Registered Citizens in the system -->
                            @{
                                var registerCitizens = Model.Item2.Count();
                            }
                            @registerCitizens
                        </h5>
                        <p class="card-text">Total citizens registered</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">Staff Members</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <!-- Logic to count number of Staff Members in the system -->
                            @{
                                var staffMembers = Model.Item3.Count();
                            }
                            @staffMembers
                        </h5>
                        <p class="card-text">Active staff members</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Access Links -->
        <p class="h3" >Quick Actions</p>
        <div class="row mt-4">
            <div class="col-md-4">
                <button type="button" class="btn btn-secondary btn-lg w-100" data-bs-toggle="modal" data-bs-target="#addCitizenModal">
                    Add New Citizen
                </button>
            </div>

            <div class="col-md-4">
                <button type="button" class="btn btn-secondary btn-lg w-100" data-bs-toggle="modal" data-bs-target="#createServiceRequestModal">
                    Create Service Request
                </button>
            </div>

            <div class="col-md-4">
                <button type="button" class="btn btn-secondary  btn-lg w-100" data-bs-toggle="modal" data-bs-target="#viewReportModal">
                View Pending Reports
            </button>
            </div>
        </div>

        <!-- News/Updates Section -->
        <div class="row mt-5">
            <div class="col-12">
                <h3>Latest News & Updates</h3>
                <ul class="list-group">
                    <li class="list-group-item">New policy for staff management introduced. <a href="#">Read more...</a></li>
                    <li class="list-group-item">Citizen registration is now open for the new year. <a href="#">Learn more...</a></li>
                    <li class="list-group-item">Important updates on service request handling. <a href="#">Read more...</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container text-center">
            <p>&copy; 2025 Municipality Management System | 
                <a href="#" class="text-white">Privacy Policy</a> | 
                <a href="#" class="text-white">Terms of Service</a></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Render the Citizen/Create.cshtml for modal -->
    @await Html.PartialAsync("../Citizen/Create", new MMS_ADP631_FA1.Models.Citizen())

    <!-- Render the ServiceRequest/Create.cshtml for modal -->
    @await Html.PartialAsync("../ServiceRequest/Create", new Tuple<MMS_ADP631_FA1.Models.ServiceRequest, List<MMS_ADP631_FA1.Models.Citizen>>(new MMS_ADP631_FA1.Models.ServiceRequest(), Model.Item2))

    <!-- Render the Reports/Details.cshtml for modal -->
    @await Html.PartialAsync("../Reports/Details", new List<MMS_ADP631_FA1.Models.Report>())
</body>
</html>
