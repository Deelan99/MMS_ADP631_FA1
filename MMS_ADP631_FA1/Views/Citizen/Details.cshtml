<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

@model MMS_ADP631_FA1.Models.Citizen

<!-- Details Modal -->
<div class="modal fade" id="citizenDetailsModal" tabindex="-1" role="dialog" aria-labelledby="citizenDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="citizenDetailsModalLabel">Citizen Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Full Name:</strong> <span id="citizenName"></span></p>
                <p><strong>Address:</strong> <span id="citizenAddress"></span></p>
                <p><strong>Phone Number:</strong> <span id="citizenPhone"></span></p>
                <p><strong>Email:</strong> <span id="citizenEmail"></span></p>
                <p><strong>Date of Birth:</strong> <span id="citizenDOB"></span></p>
                <p><strong>Registration Date:</strong> <span id="citizenRegDate"></span></p>
            </div>
        </div>
    </div>
</div>

<script>
    //Load JSON Data from Controller
    function loadCitizenDetails(citizenId) {
        fetch(`/Citizen/Details/${citizenId}`)
            .then(response => response.json())
            .then(data => {
                document.getElementById("citizenName").innerText = data.fullName;
                document.getElementById("citizenAddress").innerText = data.address;
                document.getElementById("citizenPhone").innerText = data.phoneNumber;
                document.getElementById("citizenEmail").innerText = data.email;
                document.getElementById("citizenDOB").innerText = data.dateOfBirth;
                document.getElementById("citizenRegDate").innerText = data.registrationDate;
            })
            .catch(error => console.error("Error loading citizen details:", error));
    }
</script>