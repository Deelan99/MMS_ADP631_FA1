@model MMS_ADP631_FA1.Models.Report

<!-- Report Details Modal -->
<div class="modal fade" id="reportDetailsModal" tabindex="-1" role="dialog" aria-labelledby="reportDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reportDetailsModalLabel">Report Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Submission Date:</strong> <span id="submissionDate"></span></p>
                <p><strong>Report Type:</strong> <span id="reportType"></span></p>
                <p><strong>Details:</strong> <span id="reportDetails"></span></p>
                <p><strong>Status:</strong> <span id="reportStatus"></span></p>
                <br />
                <p class="h5">Staff Details who Submitted Report</p>
                <br />
                <p><strong>Full Name:</strong> <span id="staffFullName"></span></p>
                <p><strong>Email:</strong> <span id="staffEmail"></span></p>
                <p><strong>Phone Number:</strong> <span id="staffPhoneNumber"></span></p>
            </div>
        </div>
    </div>
</div>

<script>
    function loadReportDetails(reportId) {
        fetch(`/Reports/Details/${reportId}`)
            .then(response => response.json())
            .then(data => {
                document.getElementById("submissionDate").innerText = data.submissionDate;
                document.getElementById("reportType").innerText = data.reportType;
                document.getElementById("reportDetails").innerText = data.details;
                document.getElementById("reportStatus").innerText = data.status;

                document.getElementById("staffFullName").innerText = data.citizenFullName;
                document.getElementById("staffEmail").innerText = data.citizenEmail;
                document.getElementById("staffPhoneNumber").innerText = data.citizenPhoneNumber;
            })
            .catch(error => console.error("Error loading report details:", error));
    }
</script>