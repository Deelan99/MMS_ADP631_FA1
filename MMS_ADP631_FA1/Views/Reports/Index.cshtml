@model List<MMS_ADP631_FA1.Models.Report>

@{
    ViewData["Title"] = "Reports";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" onclick="location.href='@Url.Action("Index","Home")'">MMS Dashboard</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="location.href='@Url.Action("Index","Home")'">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Citizen">Citizen Registration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff">Staff Administration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ServiceRequest">Service Requests</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" href="/Reports">Reports</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container mt-5 flex-grow-1">
        @if (Model == null || !Model.Any())
        {
            <p class="h2">There are no @ViewData["Title"] found in the system.</p>
        }
        else
        {
            <p class="h2">@ViewData["Title"] in the system</p>
            <br />
            <table class="table">
                <thead>
                    <tr>
                        <th>Submission Date</th>
                        <th>Report Type</th>
                        <th>Details</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>@report.SubmissionDate</td>
                            <td>@report.ReportType</td>
                            <td>@report.Details</td>
                            <td>@report.Status</td>
                            <td>
                                <a href="/Report/Details/@report.CitizenID" class="btn" style="background-color: #54a2bf">Details</a> |
                                <a href="/Report/Edit/@report.CitizenID" class="btn" style="background-color: #e3aa75">Review Report</a> |
                                <a href="/Report/Delete/@report.CitizenID" class="btn" style="background-color: #f52836">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container text-center">
            <p>
                &copy; 2025 Municipality Management System |
                <a href="#" class="text-white">Privacy Policy</a> |
                <a href="#" class="text-white">Terms of Service</a>
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>